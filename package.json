{
  "name": "book-info-extension",
  "private": true,
  "engines": {
    "node": ">=0.8.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.77",
    "babel-core": "^6.26.3",
    "babel-loader": "7",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chrome-webstore-upload": "^0.2.2",
    "copy-webpack-plugin": "^5.0.2",
    "coveralls": "^3.0.3",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "chrome": true
    },
    "rules": {
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "nyc": {
    "all": true,
    "include": [
      "*.js",
      "*.ts",
      "app/*.ts"
    ],
    "exclude": [
      "coverage/**",
      "packages/*/test/**",
      "test/**",
      "test{,-*}.js",
      "**/*{.,-}test.js",
      "**/__tests__/**",
      "**/node_modules/**",
      "**/babel.config.js"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true
  },
  "scripts": {
    "build": "yarn tsc",
    "upload:pack": "zip -r app app -x \"*.ts\"",
    "upload": "yarn upload:file && yarn upload:publish",
    "upload:file": "node upload.js",
    "upload:publish": "node publish.js",
    "upload:version": "node update_version.js $CIRCLE_TAG",
    "test": "nyc mocha",
    "test:coveralls": "nyc report --reporter=text-lcov | coveralls"
  }
}
