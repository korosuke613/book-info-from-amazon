{
  "name": "book-info-extension",
  "private": true,
  "engines": {
    "node": ">=0.8.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.77",
    "chai": "^4.2.0",
    "chrome-webstore-upload": "^0.2.2",
    "mocha": "^6.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.4"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "chrome": true
    },
    "rules": {
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "scripts": {
    "build": "yarn tsc",
    "upload:pack": "zip -r app app -x \"*.ts\"",
    "upload": "yarn upload:file && yarn upload:publish",
    "upload:file": "node upload.js",
    "upload:publish": "node publish.js",
    "upload:version": "node update_version.js $CIRCLE_TAG",
    "test": "mocha"
  }
}
