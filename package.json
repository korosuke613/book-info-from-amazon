{
  "name": "book-info-extension",
  "private": true,
  "engines": {
    "node": ">=0.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/polyfill": "^7.8.7",
    "@types/chrome": "0.0.127",
    "@types/jest": "^25.1.4",
    "@types/node": "^14.0.24",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.7.0",
    "chrome-webstore-upload": "^0.2.2",
    "copy-webpack-plugin": "^5.1.1",
    "coveralls": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.8",
    "ts-jest": "^25.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "set-value": "3.0.1",
    "serialize-javascript": "3.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "chrome": true
    },
    "rules": {
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "start": "webpack -w --config webpack.dev.js",
    "upload:pack": "zip -r app dist",
    "upload": "yarn upload:file && yarn upload:publish",
    "upload:file": "node scripts/upload.js",
    "upload:publish": "node scripts/publish.js",
    "upload:version": "node scripts/update_version.js $CIRCLE_TAG",
    "test": "NODE_ENV=test jest",
    "test:withCoverage": "NODE_ENV=test jest --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls"
  }
}
